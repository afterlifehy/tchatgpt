<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp_20"
    android:paddingEnd="@dimen/dp_20">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_100"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/rl_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20">

            <ImageView
                android:id="@+id/iv_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_robot" />

            <com.aries.ui.view.radius.RadiusTextView
                android:id="@+id/rtv_reply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_toStartOf="@+id/iv_copy"
                android:layout_toEndOf="@+id/iv_head"
                android:padding="@dimen/dp_10"
                app:rv_backgroundColor="@color/black_20_color"
                app:rv_radius="@dimen/dp_10"
                tools:text="迪士尼的三大卡萨开电脑电脑迪士尼的三大卡萨开电脑电脑迪士尼的三大卡萨开电脑电脑迪士尼的三大卡萨开电脑电脑迪士尼的三大卡萨开电脑电脑迪士尼的三大卡萨开电脑电脑迪士尼的三大卡萨开电脑电脑迪士尼的三大卡萨开电脑电脑迪士尼的三大卡萨开电脑电脑迪士尼的三大卡萨开电脑电脑迪士尼的三大卡萨开电脑电脑迪士尼的三大卡萨开电脑电脑迪士尼的三大卡萨开电脑电脑迪士尼的三大卡萨开电脑电脑迪士尼的三大卡萨开电脑电脑迪士尼的三大卡萨开电脑电脑" />

            <ImageView
                android:id="@+id/iv_copy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_copy" />

            <ImageView
                android:id="@+id/iv_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rtv_reply"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_toStartOf="@+id/iv_unlike"
                android:src="@mipmap/ic_like" />

            <ImageView
                android:id="@+id/iv_unlike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rtv_reply"
                android:layout_alignEnd="@+id/rtv_reply"
                android:layout_marginTop="@dimen/dp_10"
                android:src="@mipmap/ic_unlike" />
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

    <com.aries.ui.view.radius.RadiusTextView
        android:id="@+id/rtv_changeOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_20"
        android:paddingStart="@dimen/dp_10"
        android:paddingTop="@dimen/dp_20"
        android:paddingEnd="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_20"
        android:text="不满意，换一个"
        app:rv_radius="@dimen/dp_10"
        app:rv_strokeColor="@color/black"
        app:rv_strokeWidth="@dimen/dp_05" />

    <com.fitness.common.dsbridge.DWebView
        android:id="@+id/dw_web"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>