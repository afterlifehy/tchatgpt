<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_chooseAge"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp_36"
    android:paddingEnd="@dimen/dp_36">

    <com.fitness.common.widget.GradientTextview
        android:id="@+id/gtv_ageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_56"
        android:text="@string/what_is_your_age"
        android:textSize="@dimen/sp_24" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        android:layout_marginTop="@dimen/dp_55">

        <com.aries.ui.view.radius.RadiusTextView
            android:id="@+id/rtv_minus"
            android:layout_width="@dimen/dp_44"
            android:layout_height="@dimen/dp_56"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="－"
            android:textColor="@color/color_ff6a93ce"
            android:textSize="@dimen/sp_30"
            app:rv_backgroundColor="@color/white"
            app:rv_radius="@dimen/dp_75" />

        <com.aries.ui.view.radius.RadiusTextView
            android:id="@+id/rtv_age"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_190"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingStart="@dimen/dp_33"
            android:paddingTop="@dimen/dp_50"
            android:paddingEnd="@dimen/dp_33"
            android:paddingBottom="@dimen/dp_50"
            android:text="20"
            android:textColor="@color/color_ff6a93ce"
            android:textSize="@dimen/sp_70"
            app:rv_radius="@dimen/dp_70" />

        <com.aries.ui.view.radius.RadiusTextView
            android:id="@+id/rtv_add"
            android:layout_width="@dimen/dp_44"
            android:layout_height="@dimen/dp_56"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="＋"
            android:textColor="@color/color_ff6a93ce"
            android:textSize="@dimen/sp_30"
            app:rv_backgroundColor="@color/white"
            app:rv_radius="@dimen/dp_75" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_65"
        android:background="@mipmap/ic_age_ok"
        android:gravity="center"
        android:text="@string/Ok"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_20" />

    <com.aries.ui.view.radius.RadiusTextView
        android:id="@+id/rtv_ageReset"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_65"
        android:layout_marginTop="@dimen/dp_24"
        android:gravity="center"
        android:text="@string/Reset"
        android:textColor="@color/color_ff51798e"
        android:textSize="@dimen/sp_20"
        app:rv_backgroundColor="@color/transparent"
        app:rv_radius="@dimen/dp_16"
        app:rv_strokeColor="@color/color_ff879aa3"
        app:rv_strokeWidth="@dimen/dp_05" />

    <TextView
        android:id="@+id/tv_keepAgeSecret"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_70"
        android:text="@string/keep_secret"
        android:textColor="@color/color_ff6a93ce"
        android:textSize="@dimen/sp_16" />
</LinearLayout>